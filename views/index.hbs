<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/icon.ico" type="image/x-icon">
    <title>splat! Login</title>

    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>
        html,
        body {
            height: 100%;
        }

        .full-height {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .company-logo {
            max-width: 100px;
            /* Adjust as needed */
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container full-height">
        <div class="text-center">
            <!-- Company logo -->
            <img src="/assets/splat.svg" alt="Company Logo" class="company-logo">

            <div class="card">
                <div class="card-header text-center">Login Form</div>
                <div class="card-body">
                    <!-- Display error message if it exists -->
                    {{#if message}}
                    <div class="alert alert-danger" role="alert">
                        {{message}}
                    </div>
                    {{/if}}
                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="email-lgn" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email-lgn" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password-lgn" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password-lgn" name="password" required>
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <span class="w-6 h-6"
                                        style="display: flex; justify-content: center; align-items: center; width: 24px; height: 24px;">
                                        <!-- Open Eye SVG -->
                                        <svg id="openEye" xmlns="http://www.w3.org/2000/svg" fill="none"
                                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                            style="width: 20px; height: 20px;">
                                            <!-- Open eye path here -->
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        <!-- Closed Eye SVG -->
                                        <svg id="closedEye" xmlns="http://www.w3.org/2000/svg" fill="none"
                                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                            style="display: none; width: 20px; height: 20px;">
                                            <!-- Closed eye path here -->
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                                        </svg>
                                    </span>

                                </button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                        <div class="mt-3 text-center">
                            <a href="/register">Create Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // JavaScript to toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function (e) {
            const passwordInput = document.getElementById('password-lgn');
            const openEye = document.getElementById('openEye');
            const closedEye = document.getElementById('closedEye');
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Toggle icons visibility
            if (type === 'password') {
                openEye.style.display = 'block';
                closedEye.style.display = 'none';
            } else {
                openEye.style.display = 'none';
                closedEye.style.display = 'block';
            }
        });
    </script>
</body>

</html>